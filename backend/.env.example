# Server Configuration
PORT=5000

# Database Configuration
# Replace with your MongoDB Atlas connection string
# Format: mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=YourAppName
MONGO_URI=mongodb+srv://your_username:your_password@cluster0.xxxxx.mongodb.net/?retryWrites=true&w=majority&appName=OrderOnTheGo
MONGO_DNS_SERVERS=8.8.8.8,1.1.1.1

# JWT Configuration
# Generate a strong random secret (minimum 32 characters)
# Run: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Frontend Configuration
# Update this in production to your actual frontend URL
FRONTEND_BASE_URL=http://localhost:5173

# Razorpay Payment Gateway (Optional - for payment features)
# Sign up at https://razorpay.com/ and get your API keys
# Use TEST keys for development, LIVE keys for production
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# SendGrid Email Service (Optional - for email features)
# Sign up at https://sendgrid.com/ and create an API key
# Verify your sender email in SendGrid dashboard
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_SENDER=your_verified_sender_email@example.com

# Twilio SMS Service (Optional - for SMS features)
# Sign up at https://twilio.com/ and get your credentials
# Get a phone number from Twilio dashboard
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Notes:
# - Copy this file to .env and fill in your actual values
# - Never commit .env file to version control
# - Keep your secrets secure and private
# - Use different values for development and production
